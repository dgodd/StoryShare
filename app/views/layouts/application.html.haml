!!!
%html
  %head
    %title= Rails.configuration.application_name

    = stylesheet_link_tag    "application"
    = yield(:css_includes)

    = javascript_include_tag "application"
    %script{ type:"text/javascript", src:"/ckeditor/ckeditor.js" }
    %script{ type:"text/javascript", src:"/ckeditor/adapters/jquery.js" }
    %script{ type:"text/javascript", src:"/ckeditor/config.js" }
    %link{ rel:"styleshteet", src:"/ckeditor/contents.css" }
    %script{ type:"text/javascript", src:"/ckeditor/plugins/templates/templates/default.js" }
    %script{ type:"text/javascript", src:"/ckeditor/plugins/styles/styles/default.js" }
    %script{ type:"text/javascript", src:"/ckeditor/plugins/pastefromword/filter/default.js" }


    = yield(:js_includes)

    = csrf_meta_tags
    %link{rel:"icon", href:"/favicon.ico"}
  %body
    = render :partial => 'shared/header'
    #content-container.container
      - [:success, :error, :message].each do |msg|
        - if flash[msg]
          %div{:class => "alert-message #{msg.to_s}"}= flash[msg]

      = yield
